const selectedPlan = ref<number | null>(0);
const togglePlan = (index: number) => {
  selectedPlan.value = index;
};
const getInitials = (name: string) =>
  name
    .split(" ")
    .map((p) => p[0])
    .join("")
    .toUpperCase();
